{
  "name": "siddhi-divine-store",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack application emulating divinehindu.in",
  "scripts": {
    "install:all": "npm install && npm install --prefix client && npm install --prefix server",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "npm run dev --prefix server",
    "dev:client": "npm run dev --prefix client",
    "build": "npm run build --prefix client && npm run build --prefix server",
    "start": "npm run start --prefix server",
    "db:migrate": "npm run prisma:migrate --prefix server",
    "db:seed": "npm run prisma:seed --prefix server",
    "test": "npm test --prefix server && npm test --prefix client",
    "lint": "npm run lint --prefix server && npm run lint --prefix client",
    "format": "npm run format --prefix server && npm run format --prefix client",
    "db:migrate:add-reviews": "npm run db:migrate:add-reviews --prefix server"
  },
  "keywords": [
    "react",
    "express",
    "prisma",
    "typescript",
    "full-stack"
  ],
  "author": "Gemini",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.4.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  },
  "dependencies": {
    "gsap": "^3.13.0",
    "ogl": "^1.0.11",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "resend": "^6.0.3",
    "three": "^0.180.0"
  }
}
